<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lit.dao.face.MainDao">

	<select id="selectLodge" resultType="lit.dto.Lodge">
	SELECT * FROM lodge
	</select>
	
	<select id="selectLodgeByBounds" parameterType="lit.dto.MapBounds" resultType="lit.dto.Lodge">
	SELECT * FROM lodge
	WHERE latitude between #{swLat2} AND #{neLat2} AND
	longitude BETWEEN #{swLng2} AND #{neLng2}
	</select>

</mapper>